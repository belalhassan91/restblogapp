<%- include('./partials/header.ejs'); %>
<div class="ui container">
    <h1>INDEX PAGE</h1>
    <% blogs.forEach(blog => { %>
        <div>

            <h2><%= blog.title%></h2>
            <img src="<%= blog.image %>">
            <span><%= blog.created%></span>
            <p><%= blog.body.substring(0,100)%>.....</p>
            <a href="/blogs/<%= blog._id%>">Show More</a>
        </div>
    <% }); %>
</div>
<%- include('./partials/footer.ejs'); %>