<%- include('./partials/header.ejs'); %>
<div class="ui center aligned container segment">
    <div class="ui items">
        <div class="item">
            <div class="image">
                <img src="<%= blog.image %>">
            </div>
            <div class="content">
                <a class="header"><%= blog.title %></a>
                <div class="meta">
                    <span>Description</span>
                </div>
                <div class="description">
                    <p><%= blog.body %></p>
                </div>
                <div class="extra">
                    <span><%= blog.created.toDateString() %></span>
                </div>
                <form class="ui inline form" action="/blogs/<%= blog._id%>?_method=delete" method="post">
                    <a class="ui yellow basic button" href="/blogs/<%= blog._id%>/edit">edit</a>
                    <button class="ui red basic button" type="submit">delete</button>
                </form>
            </div>
        </div>
    </div>
    <%- include('./partials/footer.ejs'); %>